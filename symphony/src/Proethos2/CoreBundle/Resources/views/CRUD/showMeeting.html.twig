<form class='form' method="POST" id='form-new-meeting' action="{{ path('crud_committee_meeting_update', {meeting_id: meeting.id} ) }}">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{% trans %}Protocols in{% endtrans %} "{{ meeting.subject }}"</h4>
    </div>
    <div class="modal-body">
        
        <div class='row'>
            <div class='col-md-12'>
                <table class='table table-striped table-condensed'>
                    <thead>
                        <tr>
                            <th width="30%">{% trans %}ID{% endtrans %}</th>
                            <th>{% trans %}Protocol{% endtrans %}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for protocol in protocols %}
                            <tr>
                                <td>{{ protocol.code }}</td>
                                <td>{{ protocol.mainSubmission.publicTitle }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>                     

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
    </div>
</form>